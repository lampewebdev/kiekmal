<style type="text/css">
.ui-accordion-content{
	padding-bottom: 100px;
}
</style>
<script type="text/javascript">
jQuery(document).ready( 
    function(){         
    			var icons = {
			header: "ui-icon-circle-arrow-e",
			headerSelected: "ui-icon-circle-arrow-s"
		};
        $("#acc1").accordion({header: "h3",
        											collapsible: true, 
        											active: true,
        											autoHeight: true,
        											icons: icons});
        $("#acc2").accordion({header: "h3",collapsible: true, active: false });
        $("#acc3").accordion({header: "h3",collapsible: true, active: false });
    		$( "#tabs" ).tabs();
		}
); 
</script>
