<div id="tabs">
<ul>
<li><a href="#tabs-1">Aktivste</a></li>
<li><a href="#tabs-2">Freunde</a></li> 
<li><a href="#tabs-3">Neuste</a></li>
</ul>
<div id="tabs-1">
	<div id="acc1">
	<% @user.each do |user| %>
	 <h3><a href="#">
		<%= link_to image_tag("http://graph.facebook.com/#{user.uid}/picture/"), "/user/"+user.id.to_s %>
		<div id="nametext"> <%= link_to user.name , "/user/"+user.id.to_s %>
		</a></h3>
		<div>
			<% maps = Map.find_all_by_user_id(user.id)	%>
			<% maps.each do |map| %>
			<%= link_to map.name, "/map/show/"+map.id.to_s %></br>
			<% end %>
		</div>	
	<% end %>
	</div>
 </div>	
